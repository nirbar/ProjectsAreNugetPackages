<?xml version="1.0" encoding="utf-8" ?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Instruct native consumers how to reference this native package -->
  <ItemGroup Condition="'$(MSBuildProjectExtension)' == '.vcxproj' Or '$(MSBuildProjectExtension)' == '.vcproj'">
    <AdditionalDependencies Include="$(MSBuildThisFileDirectory)*.lib"/>
    <AdditionalLibraryDirectories Include="$(MSBuildThisFileDirectory)"/>
    <AdditionalIncludeDirectories Include="$(MSBuildThisFileDirectory)..\include"/>
  </ItemGroup>
  
  <!-- Copy binaries to output folder -->
  <Target AfterTargets="AfterBuild">
    <Copy SourceFiles="*.dll;*.exe" DestinationFolder="$(OutDir)"/>
  </Target>
  
</Project>